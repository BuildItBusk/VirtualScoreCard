@page "/newround"

<h3>Start a new round</h3>

<form>
<div class="form-group">
    <label for="maxStrokesGroup">Maximum number of strokes per hole</label>
    <select class="custom-select my-1 mr-sm-2" id="maxStrokes" @bind="MaxStrokes">
        <option selected>Choose...</option>
        @for(int i = 1; i <= 10; i++)
        {
            <option value="@i">@i</option>
        }

    </select>
  </div>
  <div class="form-group">
    <label for="numberOfPlayersGroup">Number of players (1-4)</label>
    <select class="custom-select my-1 mr-sm-2" id="numberOfPlayers" @bind="NumberOfPlayers">
        <option selected>Choose...</option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
        <option value="4">Four</option>
    </select>
  </div>
  <div class="form-group">
    <label for="playerNamesGroup">Player names</label>
    @for(int i = 1; i <= NumberOfPlayers; i++)
    {
        <input type="text" class="form-control mb-2" id="player-@i" placeholder="Player @i">
    }
  </div>
  <button type="submit" class="btn btn-primary">Start round</button>
</form>

@code {
    private int MaxStrokes { get; set; } = 7;
    private int NumberOfPlayers { get; set; }
}
